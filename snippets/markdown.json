{
    "Code Block - general": {
        "prefix": "hcb",
        "body": [
            "{% codeblock ${1:title} lang:${2:language}  %}",
            "$3",
            "{% endcodeblock %}"
        ]
    },
    "Code Block - Javascript": {
        "prefix": "hcbj",
        "body": [
            "{% codeblock ${1:title} lang:JavaScript  %}",
            "$2",
            "{% endcodeblock %}"
        ]
    },
    "Block Quote": {
        "prefix": "hquote",
        "body": [
            "{% blockquote ${1:author} ${2:link} ${3:link_title} %}",
            "$4",
            "{% endblockquote %}"
        ]
    }
}